<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mil.army.natick.atcl"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" /> 
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mil.army.natick.atcl.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mil.army.natick.atcl.PreferenceActivity"
            android:label="@string/title_activity_status" >
        </activity>
        <activity
            android:name="mil.army.natick.atcl.StatusActivity"
            android:label="@string/title_activity_status" >
        </activity>
        <activity
            android:name="mil.army.natick.atcl.FieldStripActivity"
            android:label="@string/title_activity_field_strip"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="mil.army.natick.atcl.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="mil.army.natick.atcl.TestDrive"
            android:label="@string/title_activity_testdrive" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
